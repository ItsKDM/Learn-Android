<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_intro"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Introduction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <Button
        android:id="@+id/btn_basic"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Basic Learning"
        android:layout_below="@id/btn_intro"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_begin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Beginner"
        android:layout_below="@id/btn_basic"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_adv"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Advance"
        android:layout_below="@id/btn_begin"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_pro"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Professional"
        android:layout_below="@id/btn_adv"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_tips"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Tips $ Tricks"
        android:layout_below="@id/btn_pro"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>